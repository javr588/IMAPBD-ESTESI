
@model  IEnumerable<IMAPBD.Models.LugarCalModel>
@{
    ViewBag.Title = "Paises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Busqueda de Paises</h2>
<div>

    <div class="container">


        <div class="row">

            <div class="col-md-8 col-md-offset-2 col-xs-12 col-xs-offset-0">
                <h2>Resultados</h2>
                
                <div class="table-responsive">
                    <table class="table table-condensed table-hover">

                        <tr>
                            <td>Ciudad</td>
                            <td>Dia</td>
                            <td>Calificacion</td>
                            <td>Año</td>


                        </tr>
                        @foreach (var pais in Model)
                        {
                            
                            <tr>
                                <td>@Html.TextBoxFor(m => pais.pais, new { @readonly = true, @style="border:none;background-color: transparent;"} )</td>
                                <td>@Html.TextBoxFor(m => pais.lugar, new { @readonly = true, @style="border:none;background-color: transparent;" })</td>
                                <td>@Html.TextBoxFor(m => pais.bueno, new { @readonly = true, @style="border:none;background-color: transparent;" })</td>
                                <td>@Html.TextBoxFor(m => pais.Año, new { @readonly = true, @style="border:none;background-color: transparent;" })</td>

                            </tr>
                        }


                    </table>
                </div>
            </div>

        </div>


    </div>

</div>